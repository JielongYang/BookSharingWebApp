@using _netmvc.Models;
@model Book


<html>
    <head>
        <title>

        </title>
    </head>
    <body>
    <form enctype="multipart/form-data" asp-controller = "home" asp-action = "create" method="post" class="mt-3">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group row">
            <label asp-for="name" class="col-sm-2 col-form-label"> </label>
            <div class="col-sm-10">
                <input asp-for="name" class="form-control" placeholder="input name"/>
                <span asp-validation-for="name" class="text-danger"> </span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="cover" class="col-sm-2 col-form-label"> </label>
            <div class="col-sm-10">
                <input asp-for="cover" multiple class="form-control custom-file-input"  />
            <label class="custom-file-label">Select a cover...</label>        
            </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">create</button>
        </div>
    </div>
</form>

    </body>
</html>

